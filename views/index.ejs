<%- include('header', {pagetitle: 'Fantáziák ligája'}) -%>
<%- include('nav', {currentpage: 'league'}) -%>
<div class="vr"></div>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="text-center">
                    <tr>
                        <th>Név</th>
                        <th>Liga</th>
                        <th>Nemzetiség</th>
                        <th>Módosítás</th>
                    <tr>
                    </thead>
                    <tbody class="table-group-divider">
                    <% teams.forEach(function(oneTeam) { %>
                        <tr>
                            <td onclick="window.location='/team/<%= oneTeam._id %>'"><%= oneTeam.name %></td>
                            <td onclick="window.location='/team/<%= oneTeam._id %>'"><%= oneTeam.league %></td>
                            <td onclick="window.location='/team/<%= oneTeam._id %>'"><%= oneTeam.nation %></td>
                            <td class="text-center">
                                <a href="/edit/<%= oneTeam._id %>"><i class="fa-regular fa-pen-to-square" style="color: black"></i></a>
                                <a data-bs-target="#deleteModal" data-bs-toggle="modal"><i class="fa-solid fa-trash" style="color: black"></i></a>
                                <%- include('confirm_delete', {teamid: oneTeam._id, delete_type: 'team'}) -%>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
<%- include('footer') -%>