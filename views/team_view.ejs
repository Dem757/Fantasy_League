<%- include('header', {pagetitle: 'Csapat'}) -%>
<%- include('nav', {currentpage: 'team'}) -%>
<div class="vr"></div>
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center">
                <tr>
                    <th>Név</th>
                    <th>Pozíció</th>
                    <th>Nemzetiség</th>
                    <th>Mez</th>
                    <th>Módosítás</th>
                <tr>
                </thead>
                <tbody class="table-group-divider text-center" >
                <% players.forEach(function (onePlayer) { %>
                    <tr>
                        <td><%= onePlayer.name %></td>
                        <td><%= onePlayer.position %></td>
                        <td><%= onePlayer.nation %></td>
                        <td><%= onePlayer.number %></td>
                        <td>
                            <a href="/team/<%= team._id %>/edit/<%= onePlayer._id %>"><i class="fa-regular fa-pen-to-square" style="color: black"></i></a>
                            <a data-bs-target="#deleteModal" data-bs-toggle="modal"><i class="fa-solid fa-trash" style="color: black"></i></a>
                            <%- include('confirm_delete', {teamid: team._id, playerid: onePlayer._id, delete_type: 'player'}) -%>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
<%- include('footer') -%>