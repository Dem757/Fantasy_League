<%- include('header', {pagetitle: 'Játékos módosítása'}) -%>
<%- include('nav', {currentpage: 'team'}) -%>
<div class="vr"></div>
<body>
<form class="container" method="post">
    <div class="row">
        <div class="mb-3">
            <label for="name" class="form-label">Név</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= (typeof teamplayer === "undefined") ? '' : teamplayer.name %>">
        </div>
        <div class="mb-3">
            <label for="position" class="form-label">Pozíció</label>
            <input type="text" class="form-control" id="position" name="position" value="<%= (typeof teamplayer === "undefined") ? '' : teamplayer.position %>">
        </div>
        <div class="mb-3">
            <label for="nation" class="form-label">Nemzetiség</label>
            <input type="text" class="form-control" id="nation" name="nation" value="<%= (typeof teamplayer === "undefined") ? '' : teamplayer.nation %>">
        </div>
        <div class="mb-3">
            <label for="number" class="form-label">Mez</label>
            <input type="number" class="form-control" id="number" name="number" value="<%= (typeof teamplayer === "undefined") ? '' : teamplayer.number %>">
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Mentés és vissza"/>
    <a class="btn btn-outline-danger" href="/team/<%= team._id %>" role="button">Vissza</a>
</form>
</body>
<%- include('footer') -%>